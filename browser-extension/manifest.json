{
  "manifest_version": 3,
  "name": "Sparkit Mimic",
  "version": "1.0.0",
  "description": "Mimic images from Pinterest, Instagram and other platforms",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://pinterest.com/*",
    "https://*.pinterest.com/*",
    "https://instagram.com/*",
    "https://*.instagram.com/*",
    "https://sparkiai.com/*",
    "https://*.sparkiai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://pinterest.com/*",
        "https://*.pinterest.com/*",
        "https://instagram.com/*",
        "https://*.instagram.com/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}

